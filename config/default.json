{
  "host": "localhost",
  "port": 3030,
  "public": "../public/",
  "paginate": {
    "default": 10,
    "max": 50
  },
  "authentication": {
    "entity": "user",
    "service": "users",
    "secret": "USER_SECRET",
    "authStrategies": ["jwt", "local"],
    "jwtOptions": {
      "header": {
        "typ": "access"
      },
      "audience": "https://onbai.online",
      "issuer": "onbai",
      "algorithm": "HS256",
      "expiresIn": "1y"
    },
    "local": {
      "usernameField": "email",
      "passwordField": "password"
    },
    "oauth": {
      "redirect": "OAUTH_CALLBACK",
      "google": {
        "key": "GOOGLE_ID",
        "secret": "GOOGLE_KEY",
        "scope": ["openid", "email", "profile"],
        "nonce": true
      },
      "facebook": {
        "key": "FB_ID",
        "secret": "FB_KEY",
        "scope": ["email, public_profile"]
      }
    }
  },
  "mongodb": "MONGO_URL"
}
